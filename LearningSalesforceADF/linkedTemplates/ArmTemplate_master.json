{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "LearningSalesforceADF"
		},
		"LINK_Salesforce_clientSecret": {
			"type": "secureString",
			"metadata": "Secure string for 'clientSecret' of 'LINK_Salesforce'"
		},
		"LINK_Storage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'LINK_Storage'"
		},
		"LINK_Salesforce_properties_typeProperties_environmentUrl": {
			"type": "string",
			"defaultValue": "https://axis-d-dev-ed.develop.my.salesforce.com"
		},
		"LINK_Salesforce_properties_typeProperties_clientId": {
			"type": "string",
			"defaultValue": "3MVG9WVXk15qiz1ItbQmEBQYQ1McY1We90QwN6iu1ygA0V6DIBByvZwZSrbYSdxssi_Mx8gJp3pBUXNAvjuiE"
		},
		"LINK_Storage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://salesfocelearningstorage.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "LearningSalesforceADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LINK_Salesforce_clientSecret": {
						"value": "[parameters('LINK_Salesforce_clientSecret')]"
					},
					"LINK_Storage_accountKey": {
						"value": "[parameters('LINK_Storage_accountKey')]"
					},
					"LINK_Salesforce_properties_typeProperties_environmentUrl": {
						"value": "[parameters('LINK_Salesforce_properties_typeProperties_environmentUrl')]"
					},
					"LINK_Salesforce_properties_typeProperties_clientId": {
						"value": "[parameters('LINK_Salesforce_properties_typeProperties_clientId')]"
					},
					"LINK_Storage_properties_typeProperties_url": {
						"value": "[parameters('LINK_Storage_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}